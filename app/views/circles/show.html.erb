<head>
<style type="text/css">
	.c-container{
		padding-top: 40px;
		width: 100%;
		height: 800px;
		padding-left: 40px;
		background-image:url(/images/S__74752014.jpg)
	}
	.c-font{
		font-color: black;
	}
	
</style>	
</head>





<div class="c-container">
	<h2>タイトル</h2>
	<p class="c-font"><%= @circle.title %></p>
	<h2>内容</h2>
	<p><%= @circle.body %></p>
	<% if @circle.joined_by? current_user %>
	    <%= link_to "退会", circle_circle_joins_path(@circle.id), method: :delete %>
	    <% else %>
	    <%= link_to "参加", circle_circle_joins_path(@circle.id), method: :post %>
	<% end %>


	<div>
		<%= link_to "サークルメンバー一覧", "/circle/#{@circle.id}/circle_joins", method: :get %>
	</div>
	<div>
		<%= link_to "サークルイベント一覧", events_path, method: :get %>
	</div>
	<div>
		<div class="wrapper wrapper__bg">
		<div class="container">
			<p class="c-font"><%= link_to "スレッド新規作成", new_board_path %></p>
			<h1 class="title">
				<% @circle.boards.each do |circle| %>
					<%= link_to circle.title, circle_path(circle) %>
				<% end -%>
			</h1>


			<hr>

			<div class="panel">
				<% @circle.boards.each do |board| %>
					<%= link_to board.title, board_path(board) %> <br>
				<% end -%>
			</div>
		</div>
		</div>
	</div>



<%= form_for(@circle) do |f| %>
<div class="c-container">
	<h1>サークル作成</h1>

	<div class="c-box">
		<p class="c-font">タイトル</p>

		<%= f.text_field :title %>
	</div>

	<div class="c-box">
		<p class="c-font">内容</p>
		<%= f.text_area :body %>
	</div>

	<div class="c-box">
		<p class="c-font">画像</p>
		<%= f.file_field :image %> 
	</div>

	<div class="c-box">
		<%= f.submit value="作成"%>
	</div>
</div>	
<% end %>	
<div class="wrapper wrapper__bg">
	<div class="container">

		<%= link_to @board.title, board_path(@board) %>
		<hr>
		<% if @board.errors.any? %>
			<%= @board.errors.full_messages %>
		<% end -%>
		<h2>スレッド編集</h2>
		<div class="panel form">
			<%= form_for @board do |f| %>
			<div>
				<div class="form--label">タイトル: </div>
				<div class="form--input">
					<%= f.text_field :title %>
				</div>
			</div>
			<div>
				<div class="form--label">作成者名: </div>
				<div class="form--input">
					<%= f.text_field :editor %>
				</div>
			</div>
			<div>
				<div class="form--label">本文: </div>
				<div class="form--input">
					<%= f.text_field :body %>
				</div>
			</div>
				<%= f.submit "編集を保存する" %>
			<% end -%>
		</div>
	</div>
</div>